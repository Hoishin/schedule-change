{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["esnext"],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"outDir": "build"
	}
}
